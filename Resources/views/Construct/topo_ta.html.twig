{% import "BluemesaSiteTemplateBundle:Macros:show.html.twig" as s %}

{% if method.blunt is not null %}
  {% if method.blunt %}
    {{ s.row("Cloning method", "Blunt TOPO cloning") }}
  {% else %}
    {{ s.row("Cloning method", "T/A cloning") }}
  {% endif %}
{% else %}
  {{ s.row("Cloning method", "TOPO/TA cloning") }}
{% endif %}

<div class="form-group">
  <a class="control-label col-sm-3 collapse-toggle" data-toggle="collapse" href="#vector"><strong>Vector</strong></a>
</div>
<div id="vector" class="collapse">
  {{ s.row("Name", method.vector) }}
  {{ s.row("Size", method.vectorSize ~ ((method.vectorSize > 0) ? "kb" : "")) }}
</div>
<div class="form-group">
  <a class="control-label col-sm-3 collapse-toggle" data-toggle="collapse" href="#insert"><strong>Insert</strong></a>
</div>
<div id="insert" class="collapse">
  {{ s.row("Name", method.insert) }}
  {{ s.row("Size", method.insertSize ~ ((method.insertSize > 0) ? "kb" : "")) }}
  {{ s.row("Orientation", method.insertOrientationText) }}
</div>
